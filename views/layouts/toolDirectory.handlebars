<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <title>Tool EZ - {{pageTitle}}</title>
  </head>
  <body>
    <header>
      <h1 class="title is-1">Available Tools</h1>
    </header>

    <img class="is-rounded is-centered" src="/images/Tools_img.jpeg" alt="Image of some tools" />

    <nav class="toolpage_navigators">
      <a class="button is-link is-rounded is-large" href="/">Home</a>
      <button class="button is-danger is-large is-rounded is-hovered"><a href="/" id="logout">Logout</a></button>
    </nav>

    <button class="button is-medium is-rounded is-link" id="button-tools">Refresh Tools</button>
    <button class="button is-medium is-rounded is-link" id="rent-button">Rent</button>

    <aside>
      <img src="" alt="Get this tool!" />
    </aside>

    <section class="columns">
      <h2 class="title is-2">Available Tools</h2>
      <ul id="tools-list column">
        <!-- Available tools will be displayed here -->
      </ul>

      <h2>Added Tools</h2>
      <ul id="selected-tools column">
        <!-- Selected tools will be displayed here -->
      </ul>
    </section>

    <script src="/js/tools.js"></script>
    <script src="/js/rent.js"></script>
    <script src="/js/logout.js"></script>
  </body>
</html>