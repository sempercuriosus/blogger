<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <title>Tool EZ - {{pageTitle}}</title>
  </head>
  <body>
    <header class="is-centered">
      <h1> Tool EZ Profile </h1>
    </header>
    <nav>
      <a class="subtitle is-3" style="padding-left: 15px;" href="/">Home</a>
      <a
        class="subtitle is-3"
        style="padding-left: 15px;"
        href="/available"
      >Rent Tools</a>
      <button
        id="logout"
        class="button is-danger is-large is-rounded is-hovered"
        style="padding-left: 20px;"
      >Logout</button>
    </nav>
    <div class="user-rentals">

      <h2>Current Rentals</h2>
      <ul class="tile is-parent">
        {{#each rentals}}
          <li class="tile is-child notification is-info" style="padding: 10px;">
            <p><strong>Tool Name:</strong> {{this.tool_name}}</p>
            <p><strong>Checkout Date:</strong>
              {{formatDate this.checkout_date}}</p>
            <p><strong>Return Date:</strong>
              {{formatDate this.return_date}}</p>
          </li>
        {{/each}}
      </ul>
    </div>
    <script src="/js/logout.js"></script>
  </body>
</html>